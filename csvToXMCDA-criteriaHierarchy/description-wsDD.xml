<?xml version="1.0" encoding="UTF-8"?>
<program_description>
    <program displayName="csvToXMCDA-criteriaHierarchy" name="csvToXMCDA-criteriaHierarchy" provider="PyXMCDA" version="1.0"/>
    <documentation>
        <description>Transforms a file containing criteria values from a comma-separated values (CSV) file to two XMCDA compliant files, containing the corresponding criteria ids and their criteriaHierarchy.</description>
        <contact>Waclaw Luczak (waclaw@luczak.it)</contact>
    </documentation>
    <parameters>
        <input displayName="criteriaHierarchy (csv)" id="infile1" isoptional="0" name="criteriaHierarchy.csv">
            <documentation>
                <description xml:space="preserve">The criteria and their criteria values as a CSV file.

                    Example:

                    child,Mathematics,Algebra,Analysis,Group Theory,Linear Algebra,Calculus,Functional Analysis,Chemistry,Anal. Chem,Org. Chem,Anal. Chemistry I,Applied Anal. Chemistry,Organic Chem. I,Organic Chem. II
                    parent,Root,Mathematics,Mathematics,Algebra,Algebra,Analysis,Analysis,Root,Chemistry,Chemistry,Anal. Chem,Anal. Chem,Org. Chem,Org. Chem

                </description>
            </documentation>
            <xmcda tag="other"/>
            <!-- Not a real xmcda tag -->
        </input>
        <output displayName="criteria" id="outfile1" name="criteria">
            <documentation>
                <description xml:space="preserve">The equivalent criteria ids.</description>
            </documentation>
            <xmcda tag="criteria"/>
        </output>
        <output displayName="hierarchy" id="outfile2" name="criteriaHierarchy">
            <documentation>
                <description xml:space="preserve">The equivalent criteria values.</description>
            </documentation>
            <xmcda tag="criteriaValues"/>
        </output>
        <output displayName="Messages" id="output3" name="messages">
            <documentation>
                <description>Messages or errors generated by this module.</description>
            </documentation>
            <xmcda tag="messages"/>
        </output>
    </parameters>
</program_description>
