<?xml version="1.0" encoding="UTF-8"?>
<program_description>
  <program provider="PyXMCDA"
       name="csvToXMCDA-criteriaHierarchy"
       displayName="csvToXMCDA-criteriaHierarchy"
       version="1.0" />
     <documentation>
        <description>Transforms a file containing criteria values from a comma-separated values (CSV) file to two XMCDA compliant files, containing the corresponding criteria ids and their criteriaHierarchy.</description>
        <contact>Waclaw Luczak (waclaw@luczak.it)</contact>
     </documentation>

     <parameters>
        <input displayName="criteriaHierarchy (csv)" name="criteriaHierarchy.csv" id="infile1"
            isoptional="0">
            <documentation>
                <description xml:space="preserve">The criteria and their criteria values as a CSV file.

Example:

  ,root,risk,employment,connection
  weights,'-','Math','Algebra','Algebra'

</description>
            </documentation>
            <xmcda tag="other" /> <!-- Not a real xmcda tag -->
        </input>

        <output displayName="criteria" name="criteria" id="outfile1">
            <documentation>
                <description xml:space="preserve">The equivalent criteria ids.</description>
            </documentation>
            <xmcda tag="criteria" />
        </output>

        <output displayName="criteriaHierarchy" name="criteriaHierarchy" id="outfile2">
            <documentation>
                <description xml:space="preserve">The equivalent criteria values.</description>
            </documentation>
            <xmcda tag="criteriaValues" />
        </output>

       <!--  <output displayName="messages" name="messages" id="messages">
            <documentation>
                <description xml:space="preserve">Status messages.</description>
            </documentation>
            <xmcda tag="methodMessages" />
        </output> -->

     </parameters>
</program_description>
